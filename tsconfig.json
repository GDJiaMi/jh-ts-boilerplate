{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "doc", "lib", "tests", "dist"]
}
